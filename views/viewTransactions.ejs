<%- include("partials/header"); -%>
<div class="viewTransactionHeading">
  <h1>Transaction History</h1>
</div>
<div class="viewTransactionTable">
  <table border="1">
    <tr>
      <th>Customer 1</th>
      <th>Balance of Customer 1</th>
      <th>Customer 2</th>
      <th>Balance of Customer 2</th>
      <th>Transfer Amount</th>
    </tr>
  <%element.forEach(function(temp){%>
    <tr>
      <td><p><%=temp.Customer1%></p></td>
      <td><p><%=temp.Customer1Balance%></p></td>
      <td><p><%=temp.Customer2%></p></td>
      <td><p><%=temp.Customer2Balance%></p></td>
      <td><p><%=temp.TransferAmount%></p></td>
    </tr>
  <%})%>
  </table>
</div>
